type SimpleStatechart : Statechart {
	ports += control : Controller // provides

    feature main :> region : Region {
        feature entry :> entryStates : EntryState {

        }
		entryStates <: entry

		states += Idle(Main) : State
		states += Operation(Main) : State
	}

	transitions += EntryTransition {
		from := Entry
		to := Idle
	}
	transitions += TriggeredTransition {
		from := Idle
		to := Operation
		trigger := EventTrigger(control.start)
	}
}
