statechart CompositeStatechart [
	port control : provides Controller
] {
	region Main {
		initial Entry;
		state A {
            region ARegion {
                initial AInitial;
                state Idle;
            }
        }
		state B {
		    region BRegion {
		        initial BInitial;
		        state Operation;
		    }
		}
	}

	transition from Entry to A

	transition from AInitial to Idle

	transition from BInitial to Operation

	transition from Idle to Operation when control.start
}
