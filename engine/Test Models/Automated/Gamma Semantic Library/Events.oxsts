package Events

type Event {
    var isActive: Boolean = false

    tran set {
        isActive := true
    }

    tran reset {
        isActive := false
    }

    havoc {
        havoc (isActive)
    }

    tran isSet {
        assume (isActive)
    }
}

type Timeout {
    var deltaTime : Integer = 0 - 1

    tran {
        if (deltaTime >= 0) {
            deltaTime := deltaTime - 1
        }
    }

    tran isUp {
        assume (deltaTime <= 0)
    }
}
